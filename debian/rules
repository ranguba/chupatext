	cp -ar debian/tmp/usr/lib/chupatext/modules/decomposers/ruby.* \
		debian/chupatext-decomposer-ruby/usr/lib/chupatext/modules/decomposers/
	cp -ar debian/tmp/etc/chupatext/descriptions/ruby.* \
		debian/chupatext-decomposer-ruby/etc/chupatext/descriptions/
